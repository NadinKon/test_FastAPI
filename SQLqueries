# Выбрать всех студентов, обучающихся на курсе "Математика".
SELECT Студент.ФИО
FROM Студент
JOIN УчебныйПлан ON Студент.УчебныйПланID = УчебныйПлан.ID
JOIN Курс ON УчебныйПлан.КурсID = Курс.ID
WHERE Курс.Название = 'Математика';

# Обновить оценку студента по курсу. Здесь нужно знать ID студента и ID курса, а также новую оценку.
UPDATE Оценка
SET Оценка = новая_оценка
WHERE СтудентID = ID_студента AND КурсID = ID_курса;

# Выбрать всех преподавателей, которые преподают в здании №3. Мы предполагаем, что ID здания равен 3.
SELECT DISTINCT Преподаватель.ФИО
FROM Преподаватель
JOIN Расписание ON Преподаватель.ID = Расписание.ПреподавательID
JOIN Аудитория ON Расписание.АудиторияID = Аудитория.ID
WHERE Аудитория.ЗданиеID = 3;

# Удалить задание для самостоятельной работы, которое было создано более года назад.
DELETE FROM ЗаданиеДляСамостоятельнойРаботы
WHERE Дата_создания < CURRENT_DATE - INTERVAL '1 year';

# Добавить новый семестр в учебный год. В этом запросе необходимо заменить соответствующие значения.
INSERT INTO Семестр (ID, Название, Дата_начала, Дата_окончания)
VALUES (новый_ID, 'новое_название', 'дата_начала', 'дата_окончания');


